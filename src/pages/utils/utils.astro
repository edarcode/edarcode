---
import GoTo from "../../components/hyperlinks/GoTo/GoTo.astro";
import Layout from "../../layouts/Layout/Layout.astro";
import { ROUTER } from "../router";
import { USEFUL_LINKS } from "./useful";
---

<Layout title={ROUTER.utils.display}>
  <main>
    <h1>{ROUTER.utils.display}</h1>

    <div>
      {USEFUL_LINKS.map((item) => <GoTo href={item.href}>{item.display}</GoTo>)}
    </div>
  </main>
</Layout>

<style>
  main {
    padding: var(--lg);

    h1,
    div {
      margin-left: auto;
      margin-right: auto;
      width: 100%;
      max-width: var(--mw-page);
    }

    div {
      display: grid;
      justify-items: start;
    }
  }
</style>
